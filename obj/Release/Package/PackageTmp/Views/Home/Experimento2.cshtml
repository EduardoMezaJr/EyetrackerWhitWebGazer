#include 'iostream'
#include 'stdio.h'
using namespace std;

int main()
{
    int x, factorial, numero;
    
    cout<<"Ingrese un numero:/ ";
    cin>>numero;
    x = 1;
    factorial = 1;
    while(x <= numero)
      {
         factorial = factorial * x++;
      }
    cout<<"El factorial de :"<<'numero'<<" = "<<'factorial'<<'endl';

    system("PAUSE");
    return EXIT_SUCCESS;
}

