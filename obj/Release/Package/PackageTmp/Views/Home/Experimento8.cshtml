namespace cryptoTest
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            
        }

        private void btnClean_Click(object sender, RoutedEventArgs e)
        {
            txtKey.Text = "";
            rtbPlainText.SelectAll();
            rtbPlainText.Selection.Text = "";
            rtbCrypto.SelectAll();
            rtbCrypto.Selection.Text = "";
        }

        private void btnEncrypt_Click(object sender, RoutedEventArgs e)
        {
            Crypto crypto = new Crypto(txtKey.Text);

            //button add new task on the add task grid 
            TextRange textRange = new TextRange(
                // TextPointer to the start of content in the RichTextBox.
                rtbPlainText.Document.ContentStart,
                // TextPointer to the end of content in the RichTextBox.
                rtbPlainText.Document.ContentEnd
            );

            rtbCrypto.Document.Blocks.Add(new Paragraph(new Run(crypto.EncryptData(textRange.Text))));
        }

        private void btnDecrypt_Click(object sender, RoutedEventArgs e)
        {
            Crypto crypto = new Crypto(txtKey.Text);

            //button add new task on the add task grid 
            TextRange textRange = new TextRange(
                // TextPointer to the start of content in the RichTextBox.
                rtbPlainText.Document.ContentStart,
                // TextPointer to the end of content in the RichTextBox.
                rtbPlainText.Document.ContentEnd
            );

            rtbCrypto.Document.Blocks.Add(new Paragraph(new Run(crypto.DecryptData(textRange.Text))));
        }
    }
}

